<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bar_back"
    tools:context="com.alkilerprueba.amg.examapk.ResultsActivity">

    <com.google.android.gms.ads.AdView
        android:layout_gravity="center"
        android:id="@+id/adView"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:gravity="center"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/text1"
        android:text="Limits"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:id="@+id/progress1"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:id="@+id/textProgress1"
            android:text="0%"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/text2"
        android:text="Limits"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:id="@+id/progress2"
        android:layout_height="wrap_content" />
    <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:id="@+id/textProgress2"
            android:text="0%"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/text3"
        android:text="Limits"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:layout_marginBottom="25dp"
        android:progress="0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:id="@+id/progress3"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:id="@+id/textProgress3"
            android:text="0%"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/text4"
        android:text="Limits"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:progress="0"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:id="@+id/progress4"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:id="@+id/textProgress4"
            android:text="0%"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
